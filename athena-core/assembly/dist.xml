                <include>start-script/start-das-mediator.sh</include>
                <include>start-script/start-das-serial.sh</include>
                <include>start-script/start-das-without-supervisor.sh</include>
                <include>start-script/start-das-global.sh</include>
                <include>tool/dalgrep</include>
                <include>tool/hash2pattern</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/script</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>run.sh</include>
                <include>start.sh</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <fileMode>0444</fileMode>
        </dependencySet>
    </dependencySets>

</assembly>
