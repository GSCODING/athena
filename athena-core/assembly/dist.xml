<assembly xmlns="http://maven.apache.org/POM/4.0.0"
>
    <id>package</id>
    <formats>
        <format>tar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/script</directory>
            <outputDirectory>/sbin/</outputDirectory>
            <includes>
                <include>before_install.sh</include>
                <include>app_start.sh</include>
                <include>validate-app.sh</include>
                <include>after_install.sh</include>
                <include>get-pid.sh</include>
